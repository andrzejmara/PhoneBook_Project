@model List<PhoneBook.Models.PersonModel>
<div class="jumbotron">
    <table class="table">
        <tr class="thead-dark">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Created</th>
            <th>Updated</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.ID</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Phone</td>
                <td>@person.Email</td>
                <td>@person.Created</td>
                <td>@person.Updated</td>
                <td><a class="text-info" asp-action="Edit" asp-route-id="@person.ID">Edit</a></td>
                <td><a class="text-warning" asp-action="Remove" asp-route-id="@person.ID">Delete</a></td>
            </tr>
        }
    </table>
    @if (ViewBag.ID == 1)
    {
        <a class="btn btn-primary" asp-action="Index" asp-route-id="@(ViewBag.ID+1)">Next Page</a>
    }
    else if (ViewBag.ID > 1)
    {
        <a class="btn btn-primary" asp-action="Index" asp-route-id="@(ViewBag.ID-1)">Previous Page</a>
        <a class="btn btn-primary" asp-action="Index" asp-route-id="@(ViewBag.ID+1)">Next Page</a>
    }
</div>
    <a class="btn btn-success" asp-action="Add">Add a new entry!</a>
<p></p><p></p>
@using (Html.BeginForm("Index", "Person", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-6">
            <p class="h5">Search for entry:</p>
            <input type="text" name="what" required>
            <p></p>
        </div>
        <span></span>
        <div class="col-xs-6">
            <p class="h5">Search By:</p>
            <select id="where" name="where">
                <option value="FirstName">First Name</option>
                <option value="LastName">Last Name</option>
                <option value="Phone">Phone</option>
                <option value="Email">E-Mail</option>
            </select>
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>



}







